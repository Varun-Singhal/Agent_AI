{
  "manifest_version": 3,
  "name": "Travel Agent Helper",
  "version": "1.0.0",
  "description": "Ask in natural language to find best flights or hotels via Gemini + SerpApi.",
  "action": {
    "default_title": "Travel Agent Helper",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://serpapi.com/*"
  ]
}


