{
  "manifest_version": 3,
  "name": "Interview Question Extractor",
  "version": "1.0.0",
  "description": "Upload Word documents and extract the 5 most important interview questions using AI.",
  "action": {
    "default_title": "Interview Question Extractor",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg", 
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
